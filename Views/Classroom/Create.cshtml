@model UniversityAffairs.Models.Classroom

@{
    ViewData["Title"] = "Add Classroom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4 text-success">➕ Add New Classroom</h2>

    <form asp-action="Create" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="RoomName" class="form-label">Room Name</label>
            <input asp-for="RoomName" class="form-control" placeholder="e.g. A101, Amfi-2" />
            <span asp-validation-for="RoomName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label">Capacity</label>
            <input asp-for="Capacity" class="form-control" placeholder="e.g. 40" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
