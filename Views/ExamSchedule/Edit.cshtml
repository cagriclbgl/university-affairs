@model UniversityAffairs.Models.ExamSchedule
@{
    ViewData["Title"] = "Edit Exam";
}
<h2>Edit Exam</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="LessonId"></label>
        <select asp-for="LessonId" asp-items="ViewBag.LessonId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="InstructorId"></label>
        <select asp-for="InstructorId" asp-items="ViewBag.InstructorId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ClassroomId"></label>
        <select asp-for="ClassroomId" asp-items="ViewBag.ClassroomId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="GradeId"></label>
        <select asp-for="GradeId" asp-items="ViewBag.GradeId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="TermId"></label>
        <select asp-for="TermId" asp-items="ViewBag.TermId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ExamDate"></label>
        <input asp-for="ExamDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" type="time" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

