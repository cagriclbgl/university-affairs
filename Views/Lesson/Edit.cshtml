@model UniversityAffairs.Models.Lesson

@{
    ViewData["Title"] = "Edit Lesson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4">✏️ Edit Lesson</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="LessonCode" class="form-label"></label>
                    <input asp-for="LessonCode" class="form-control" />
                    <span asp-validation-for="LessonCode" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LessonName" class="form-label"></label>
                    <input asp-for="LessonName" class="form-control" />
                    <span asp-validation-for="LessonName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Credit" class="form-label"></label>
                    <input asp-for="Credit" class="form-control" />
                    <span asp-validation-for="Credit" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">← Back to List</a>
            </form>
        </div>
    </div>
</div>
