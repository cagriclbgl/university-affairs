@{
    ViewData["Title"] = "Create New User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="admin-title">👤 Create New User</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input name="fullName" class="form-control" placeholder="e.g. Ayşe Yılmaz" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input name="username" class="form-control" placeholder="e.g. ayse.yilmaz" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" placeholder="e.g. ayse@university.edu.tr" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input name="password" type="password" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Role</label>
            <select name="role" class="form-select" required>
                @foreach (var role in ViewBag.Roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">💾 Create User</button>
            <a asp-controller="Admin" asp-action="Panel" class="btn btn-outline-secondary">← Back to Admin Panel</a>
        </div>
    </form>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success mt-4">@ViewBag.Success</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-4">@ViewBag.Error</div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
