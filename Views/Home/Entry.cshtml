@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .entry-container {
        height: 90vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    }

    .entry-title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 2rem;
        color: #2c3e50;
    }

    .entry-buttons {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .entry-button {
        padding: 1.5rem 3rem;
        font-size: 1.25rem;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .entry-button.student {
            background-color: #3498db;
            color: white;
        }

        .entry-button.admin {
            background-color: #2ecc71;
            color: white;
        }

        .entry-button:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }
</style>

<div class="entry-container">
    <div class="entry-title">Welcome to University Affairs</div>
    <div class="entry-buttons">
        <a asp-controller="LessonSchedule" asp-action="WeeklySchedule" class="entry-button student">
            🎓 Student Login
        </a>
        <a asp-controller="Admin" asp-action="Panel" class="entry-button admin">
            🛠️ Admin Login
        </a>

    </div>
</div>
