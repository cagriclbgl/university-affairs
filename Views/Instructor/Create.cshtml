@model UniversityAffairs.Models.Instructor

@{
    ViewData["Title"] = "Add Instructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="admin-title">➕ Add New Instructor</h2>

    <form asp-action="Create" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="e.g. Çağrı Çelebioğlu" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="e.g. cagri@kocaeli.edu.tr" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Academic Title</label>
            <input asp-for="Title" class="form-control" placeholder="e.g. Professor, Dr." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">💾 Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
