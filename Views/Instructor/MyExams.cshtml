@model IEnumerable<UniversityAffairs.Models.ExamSchedule>

@{
    ViewData["Title"] = "My Exams";
}

<h2 class="mt-3">My Exam Schedule</h2>

@if (!Model.Any())
{
    <p class="text-muted">You have no scheduled exams.</p>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Course</th>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                <th>Classroom</th>
                <th>Grade</th>
                <th>Term</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model)
            {
                <tr>
                    <td>@exam.Lesson?.LessonName</td>
                    <td>@exam.ExamDate.ToShortDateString()</td>
                    <td>@exam.StartTime</td>
                    <td>@exam.EndTime</td>
                    <td>@exam.Classroom?.RoomName</td>
                    <td>@exam.Grade?.Name</td>
                    <td>@exam.Term?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
