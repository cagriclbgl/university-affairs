@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-container">

    <!-- 🔙 Geri Butonu -->
    <div class="back-button">
        <a href="#" onclick="confirmLogout(event)" class="btn btn-outline-secondary fw-bold px-4 py-2">
            ← Back to Entry Page
        </a>

    </div>

    <div class="admin-title">🎓 Bölüm Başkanı Paneli</div>

    <div class="admin-menu">
        <a asp-controller="UserManagement" asp-action="Create" class="admin-card">👥 Manage Users</a>
        <a asp-controller="Lesson" asp-action="Index" class="admin-card">📘 Manage Lessons</a>
        <a asp-controller="Instructor" asp-action="ListAll" class="admin-card">👨‍🏫 Manage Instructors</a>
        <a asp-controller="Classroom" asp-action="Index" class="admin-card">🏫 Manage Classrooms</a>
        <a asp-controller="LessonSchedule" asp-action="Index" class="admin-card">🗓️ Manage Lesson Schedules</a>
        <a asp-controller="ExamSchedule" asp-action="Index" class="admin-card">📝 Manage Exam Schedules</a>
        <a asp-controller="Grade" asp-action="Index" class="admin-card">🎓 Manage Grades & Terms</a>
        <a asp-controller="Instructor" asp-action="WeeklySchedule" class="admin-card">📅 Instructor Weekly Schedule</a>
    </div>

</div>

@section Scripts {
    <script>
        function confirmLogout(event) {
            event.preventDefault();
            if (confirm("Çıkış yapmak istediğinize emin misiniz?")) {
                window.location.href = "/Account/Login";
            }
        }
    </script>
}
